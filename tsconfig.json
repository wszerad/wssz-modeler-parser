{
	"include": [
		"index.ts",
		"src/**/*.ts"
	],
	"compilerOptions": {
		"strict": true,
		"strictPropertyInitialization": false,
		"strictNullChecks": false,
		"sourceMap": true,
		"declaration": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "es6",
		"outDir": "./dist",
		"incremental": false,
		"esModuleInterop": true,
		"lib": [
			"es7",
			"es2017",
			"dom"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"reflect-metadata"
		],
		"baseUrl": "./index.ts"
	},
	"exclude": [
		"node_modules",
		"dist/*",
		"tests/*"
	]
}
